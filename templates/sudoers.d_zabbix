Defaults:zabbix !requiretty

{% if zabbix_agent_helper_zfs is defined and zabbix_agent_helper_zfs == True %}
## Allow zabbix user to use basic read-only ZFS commands
Cmnd_Alias C_ZABBIX_ZFS = \
  /usr/bin/zfs get, /sbin/zfs get *, \
  /usr/bin/zfs list, /sbin/zfs list *, \
  /usr/bin/zpool get, /sbin/zpool get *, \
  /usr/bin/zpool iostat, /sbin/zpool iostat *, \
  /usr/bin/zpool list, /sbin/zpool list *, \
  /usr/bin/zpool status, /sbin/zpool status *

zabbix ALL = (root) NOPASSWD: C_ZABBIX_ZFS
{% endif %}

{% if zabbix_agent_helper_mdadm %}
## Allow zabbix user to run mdraid helper script(s)
zabbix ALL = (root) NOPASSWD: /opt/bin/zabbix/zabbix_mdraid.sh
{% endif %}
